{
  "name": "ddd-picpay/sample",
  "description": "DDD sample for PicPay use it",
  "keywords": ["Domain Driven Design", "DDD"],
  "license": "MIT",
  "type": "project",
  "require": {
    "php": ">=7.0.0",
    "beberlei/assert": "^3.2",
    "ramsey/uuid": "^3.8",
    "psr/http-message":  "^1.0"
  },
  "require-dev": {
    "mockery/mockery": "~1.0",
    "phpunit/phpunit": "~6.0",
    "fzaninotto/faker": "~1.8"
  },
  "autoload": {
    "classmap": [
      "domains"
    ],
    "psr-4": {
      "Core\\": "Core",
      "Product\\": "Product",
      "ProductBoundedContext\\": "ProductBoundedContext",
      "SharedKernel\\": "SharedKernel"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  }
}